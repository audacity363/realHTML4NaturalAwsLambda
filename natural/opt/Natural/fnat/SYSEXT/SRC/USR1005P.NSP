0260   02 UPDATE-CMD  (A1)       /* 'X' = UPDATE=ON , ' ' = UPDATE=OFF
0270   02 DAY-DIFF    (N5)       /* Value of parameter DD (dec.)
0280   02 MESSAGE-LINE(A3)       /* Position of the message line
0290   02 PFKEY-LINE  (A3)       /* Position of the first PF-key line
0300   02 STAT-LINE   (A3)       /* Position of the statistics line
0310   02 IA          (A1)       /* Value of IA - Input assign character
0320   02 ID          (A1)       /* Value of ID - Input delimiter
0330   02 DC          (A1)       /* Value of DC - Decimal character
0340   02 CF          (A1)       /* Value of CF - Char. for terminal cmds;
0350                             /* For CF=OFF, the char. 'F' is returned
0360   02 UDB2        (N5)       /* User DBID (2 Byte long)
0370   /*
0380   02 TIME-DIFF-S (A9)       /* For mainframes only:
0390                             /* Time differential in hh:mm:ss
0400   02 TIMEZONE    (A32)      /* For mainframes only:
0410                             /* TD=Timezone
0420   /*
0430   02 WH          (A1)       /* 'X' = WH=ON,    ' ' = WH=OFF
0440   02 EJ          (A1)       /* 'X' = EJ=ON,    ' ' = EJ=OFF
0450   02 SA          (A1)       /* 'X' = SA=ON,    ' ' = SA=OFF
0460   02 ZP          (A1)       /* 'X' = ZP=ON,    ' ' = ZP=OFF
0470   02 CC          (A1)       /* 'X' = CC=ON,    ' ' = CC=OFF
0480   02 ZD          (A1)       /* 'X' = ZD=ON,    ' ' = ZD=OFF
0490   02 LE          (A1)       /* 'X' = LE=ON,    ' ' = LE=OFF
0500   02 NC          (A1)       /* 'X' = NC=ON,    ' ' = NC=OFF
0510   02 FS          (A1)       /* 'X' = FS=ON,    ' ' = FS=OFF
0520   02 TS          (A1)       /* 'X' = TS=ON,    ' ' = TS=OFF
0530   02 FCDP        (A1)       /* 'X' = FCDP=ON,  ' ' = FCDP=OFF
0540   02 OPF         (A1)       /* 'X' = OPF=ON,   ' ' = OPF=OFF
0550   02 REINP       (A1)       /* 'X' = REINP=ON, ' ' = REINP=OFF
0560   /*
0570   02 IM          (A1)       /* Possible values: 'F', 'D'
0580   02 DFSTACK     (A1)       /* Possible values: 'S', 'C', 'I'
0590   02 DFOUT       (A1)       /* Possible values: 'S', 'I'
0600   02 DFTITLE     (A1)       /* Possible values: 'S', 'L', 'I'
0610   02 PM          (A2)       /* Possible values: 'C', 'P', 'I', 'R'
0620                             /* and combinations
0630   /*
0640   02 LS          (I4)       /* Value of LS session parameter
0650   02 PS          (I4)       /* Value of PS session parameter
0660   02 SL          (I4)       /* Value of SL session parameter
0670   02 LT          (I4)       /* Value of LT session parameter
0680   02 MT          (I4)       /* Value of MT session parameter
0690   02 SF          (I4)       /* Value of SF session parameter
0700   02 TQMARK      (A1)       /* Translate quotation marks
0710   /* was TQ                 /* 'X' = TQMARK=ON,  ' ' = TQMARK=OFF
0720   02 THSEPCH     (A1)       /* Value of THousands SEParator CHaracter
0730   02 CPCVERR     (A1)       /* Code Page ConVersion ERRor
0740                             /* 'X' = CPCVERR=ON, ' ' CPCVERR=OFF
0750   02 P-DO        (A1)       /* Display order (DO) of output data
0760                             /*  'L' Logical display order,
0770                             /*  'V' visual order
0780   /*
0790   /* To be continued.
0800   /*
0810END-DEFINE
